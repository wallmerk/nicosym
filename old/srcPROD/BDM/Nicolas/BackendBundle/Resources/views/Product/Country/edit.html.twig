{% extends 'BDMNicolasBackendBundle::layout.html.twig' %}

{% block content %}
    <!--main content start-->
    <section id="main-content" class="">
        <section class="wrapper">
            <!-- page start-->
            <!-- page start-->
            <div class="row">

                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Gestion Des Pays :: Modifier
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" class="form-horizontal" method="post" enctype="multipart/form-data"
                                      action="{{ path('_backend_country_edit',{'id':country.id}) }}">

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="label">Pays:</label>

                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="label" name="label"
                                                   value="{% if country.label is defined %}{{ country.label }}{% endif %}"
                                            >
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button onclick="window.location='{{ url('_backend_country') }}'"
                                                    class="btn btn-default" type="button">Cancel
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>

                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
{% endblock %}