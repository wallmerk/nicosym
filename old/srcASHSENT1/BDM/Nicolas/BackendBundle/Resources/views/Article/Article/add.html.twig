{% block content %}
    <!--main content start-->
    <section id="main-content" class="">
        <section class="wrapper">
            <!-- page start-->
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Gestion Des Articles :: Ajout
                        </header>
                        <div class="panel-body">

                            <div class="form">
                                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}
                                <form class="cmxform form-horizontal" id="userCreateForm" method="post"
                                      enctype="multipart/form-data" action="{{ path('_backend_articles_add') }}">

                                    <div class="form-group ">
                                        <label for="title" class="control-label col-md-3">Titre:</label>

                                        <div class="col-lg-6">
                                            <input class=" form-control" id="title" name="title" type="text"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="link" class="control-label col-md-3">Lien :</label>

                                        <div class="col-lg-6">
                                            <input class=" form-control" id="link" name="link"
                                                   type="text"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button onclick="window.location='{{ url('_backend_articles') }}'"
                                                    class="btn btn-default" type="button">Cancel
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>

                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
