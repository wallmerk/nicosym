{% extends 'BDMNicolasBackendBundle::layout.html.twig' %}

{% block content %}
    <!--main content start-->
    <section id="main-content" class="">
        <section class="wrapper">
            <!-- page start-->
            <!-- page start-->
            <div class="row">

                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Gestion Des MEAs :: Ajout
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" class="form-horizontal" method="post"
                                      enctype="multipart/form-data" action="{{ path('_backend_content_footer_block_add') }}">

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="title">Titre</label>

                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="title" name="title" value=""
                                            >
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label for="text" class="control-label col-md-3">Description</label>

                                        <div class="col-md-9">
                                            <textarea class="form-control" name="text" id="text"
                                                      rows="6"></textarea>
                                        </div>
                                    </div>


                                    <div class="form-group last">
                                        <label for="icon" class="control-label col-md-3">Icone:</label>

                                        <div class="col-md-9">
                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                <div class="fileinput-new thumbnail"
                                                     style="width: 200px; height: 150px;">
                                                    <img src="http://placehold.it/200x150?text=1440x440"
                                                         data-src="http://placehold.it/200x150?text=1440x440" alt="...">
                                                </div>
                                                <div class="fileinput-preview fileinput-exists thumbnail"
                                                     style="max-width: 200px; max-height: 150px;"></div>
                                                <div>
                                                    <span class="btn btn-info btn-file"><span class="fileinput-new">Selection d'image</span><span
                                                                class="fileinput-exists">Changer</span>
                                                        <input type="file" id="icon" name="icon">
                                                    </span>
                                                    <a href="#" class="btn btn-danger fileinput-exists"
                                                       data-dismiss="fileinput">Supprimer</a>
                                                </div>
                                            </div>
                                            <br/>
                                            <span class="label label-danger">NOTE!</span>
                                            <span>
                                             Taille recommand√©e: 1440x440 pixels
                                             </span>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button onclick="window.location='{{ url('_backend_content_footer_block') }}'" class="btn btn-default" type="button">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>

                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
{% endblock %}


