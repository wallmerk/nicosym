{% extends 'BDMNicolasBackendBundle::layout.html.twig' %}

{% block content %}

    <section id="main-content">
        <section class="wrapper">
            <div class="row">


                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                <div class="col-lg-12">
                    <section class="panel">

                        <header class="panel-heading">
                            Gestion Des widgets
                        </header>
                        <div class="panel-body">
                            <section id="unseen">
                                <div class="clearfix">
                                    {% if widgets|length < 2 %}
                                        <div class="btn-group">
                                            <button id="editable-sample_new" class="btn btn-primary"
                                                    onclick="window.location='{{ url('_backend_content_home_widget_add') }}'">
                                                Ajouter <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    {% endif %}
                                </div>
                                <br/>

                                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                                <br/>
                                {% if widgets %}
                                    <table class="table table-bordered table-striped table-condensed">
                                        <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Titre</th>
                                            <th>Icone</th>
                                            <th>Image</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>

                                        {% for widget in widgets %}
                                            <tr>
                                                <td>{{ widget.id }}</td>
                                                <td>{{ widget.title }}</td>
                                                <td class="numeric">
                                                    <a class="btn btn-success btn-xs" data-toggle="modal"
                                                       href="#myModal2">
                                                        Aperçu
                                                    </a>
                                                    <div class="modal fade" id="myModal2" tabindex="-1"
                                                         role="dialog" aria-labelledby="myModalLabel"
                                                         aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content"
                                                                 style="display: inline-block !important;">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close"
                                                                            data-dismiss="modal"
                                                                            aria-hidden="true">&times;</button>
                                                                    <h4 class="modal-title">{{ widget.title }}</h4>
                                                                </div>
                                                                <div class="modal-body"
                                                                     style="display: inline-block !important;">


                                                                    <div class="images item"
                                                                         style="display: inline-block !important;">
                                                                        <a href="#myModal{{ widget.id }}"
                                                                           data-toggle="modal">
                                                                            <img src="{{ asset('/uploads/backend/content/home/widget/icon/' ~ widget.icon) }}"
                                                                                 alt="{{ widget.title }}"
                                                                                 style="width: 100%; height: 100%;"/>
                                                                        </a>
                                                                        {#<p class="pull-down">{{ content.title }} </p>#}
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button data-dismiss="modal" class="btn btn-default"
                                                                            type="button">Fermer
                                                                    </button>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>

                                                <td class="numeric">
                                                    {% if widget.order == 2 %}
                                                    <a class="btn btn-success btn-xs" data-toggle="modal"
                                                       href="#myModal1">
                                                        Aperçu
                                                    </a>
                                                    <div class="modal fade" id="myModal1" tabindex="-1"
                                                         role="dialog" aria-labelledby="myModalLabel"
                                                         aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content"
                                                                 style="display: inline-block !important;">
                                                                <div class="modal-header">
                                                                    <button type="button" class="close"
                                                                            data-dismiss="modal"
                                                                            aria-hidden="true">&times;</button>
                                                                    <h4 class="modal-title">{{ widget.title }}</h4>
                                                                </div>
                                                                <div class="modal-body"
                                                                     style="display: inline-block !important;">


                                                                    <div class="images item"
                                                                         style="display: inline-block !important;">
                                                                        <a href="#myModal{{ widget.id }}"
                                                                           data-toggle="modal">
                                                                            <img src="{{ asset('/uploads/backend/content/home/widget/picture/' ~ widget.picture) }}"
                                                                                 alt="{{ widget.title }}"
                                                                                 style="width: 100%; height: 100%;"/>
                                                                        </a>
                                                                        {#<p class="pull-down">{{ content.title }} </p>#}
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button data-dismiss="modal" class="btn btn-default"
                                                                            type="button">Fermer
                                                                    </button>

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {% else %}
                                                        <span class="label label-danger label-mini">VIDE</span>
                                                    {% endif %}
                                                </td>

                                                <td>
                                                    <button onclick="window.location='{{ url('_backend_content_home_widget_edit', {'id':widget.id}) }}'"
                                                            type="button" class="btn btn-info btn-xs"><i
                                                                class="fa fa-edit"></i> Modifier
                                                    </button>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                {% endif %}
                            </section>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
