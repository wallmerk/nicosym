{% extends 'BDMNicolasBackendBundle::layout.html.twig' %}

{% block content %}
	<section id="main-content">
        <section class="wrapper">
            <div class="row">
                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                <div class="col-lg-12">
                    <section class="panel">

                        <header class="panel-heading">
                            Gestion des Services
                        </header>
                        <div class="panel-body">
                            <section id="unseen">
                                <div class="clearfix">
                                    <div class="btn-group">
                                        <button id="editable-sample_new" class="btn btn-primary"
                                                onclick="window.location='{{ url('_backend_service_add') }}'">
                                            Ajouter <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                                <br/>

                                <br/>


                                {% if services %}
                                    <table id="article" class="table table-bordered table-striped table-condensed">
                                        <thead>
                                        <tr>
                                            <th><strong>#</strong></th>
                                            <th>Titre</th>
                                            <th>Description</th>
                                            <th>position</th>
                                            <th>bg-color</th>
                                            <th>actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for service in services %}
                                            <tr>
                                                <td>{{ service.id }}</td>
                                                <td>{{ service.title }}</td>
                                                <td>{{ service.content }}</td>
                                                <td>{{ service.position }}</td>
                                                <td>{{ service.backgroundColor }}</td>

                                                <td>
                                                    <button onclick="window.location='{{ url('_backend_service_edit', {'id':service.id}) }}'"
                                                            type="button" class="btn btn-info btn-xs"><i
                                                                class="fa fa-edit"></i> Modifier
                                                    </button>
                                                    <button onclick="window.location='{{ url('_backend_service_delete', {'id':service.id}) }}'"
                                                            type="button" class="btn btn-danger btn-xs"><i
                                                                class="fa fa-trash-o"></i> Supprimer
                                                    </button>
                                                </td>

                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                {% endif %}
                            </section>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </section>

{% endblock %}