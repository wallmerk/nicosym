<body class="login-body">

<div class="container">

    <form class="form-signin" action="{{ path('_backend_login_check') }}" method="post">
        <h2 class="form-signin-heading">Nicolas Admin</h2>

        {% if error is defined and error %}
            <div class="alert alert-block alert-danger fade in">
                <button data-dismiss="alert" class="close close-sm" type="button">
                    <i class="fa fa-times"></i>
                </button>
                <strong>Oups!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}.
            </div>
        {% endif %}

        <div class="login-wrap">
            <div class="user-login-info">
                <input type="text" class="form-control" placeholder="ID Utilisateur" name="_username" value="{{ last_username }}" autofocus>
                <input type="password" class="form-control" placeholder="Password" name="_password">
            </div>
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Se rappeler de moi
                <span class="pull-right">
                    <a data-toggle="modal" href="#myModal"> MDP Oublié?</a>

                </span>
            </label>
            <button class="btn btn-lg btn-login btn-block" type="submit">Connexion</button>

            {#<div class="registration">
                Don't have an account yet?
                <a class="" href="registration.html">
                    Create an account
                </a>
            </div>#}

        </div>

        <!-- Modal -->
        <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">MDP Oublié ?</h4>
                    </div>
                    <div class="modal-body">
                        <p>Veuilles saisir votre adresse email afin de restaurer votre mot de passe.</p>
                        <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                    </div>
                    <div class="modal-footer">
                        <button data-dismiss="modal" class="btn btn-default" type="button">Annuler</button>
                        <button class="btn btn-success" type="button">Envoyer</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- modal -->

    </form>

</div>



<!-- Placed js at the end of the document so the pages load faster -->

