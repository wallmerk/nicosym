{% extends 'BDMNicolasBackendBundle::layout.html.twig' %}

{% block content %}
    <!--main content start-->
    <section id="main-content" class="">
        <section class="wrapper">
            <!-- page start-->
            <!-- page start-->
            <div class="row">

                {{ render(controller('BDMNicolasBackendBundle:Partials:flashbag')) }}

                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Gestion Des produit :: Modif
                        </header>
                        <div class="panel-body">
                            <div class="position-center">
                                <form role="form" class="form-horizontal" method="post" enctype="multipart/form-data"
                                      action="{{ path('_backend_product_edit',{'id':product.id}) }}">

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="label">Nom:</label>

                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="label" name="label"
                                                   value="{% if product.label is defined %}{{ product.label }}{% endif %}"
                                            >
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="ref">Ref:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="ref" name="ref"
                                                   value="{% if product.ref is defined %}{{ product.ref }}{% endif %}"
                                            >
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="careLevel">Niveau de garde:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="careLevel" name="careLevel"
                                                   value="{% if product.careLevel is defined %}{{ product.careLevel }}{% endif %}"
                                            >
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="serviceTemperature">Service de
                                            températeur:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="serviceTemperature"
                                                   name="serviceTemperature"
                                                   value="{% if product.serviceTemperature is defined %}{{ product.serviceTemperature }}{% endif %}"
                                            >
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="corps">Œnologue corps:</label>

                                        <div class="col-md-9">
                                            <select id="corps" name="corps" class="form-control">
                                                <option value="">Œnologue corps</option>

                                                {% for i in 1..10 %}
                                                    <option {% if product.corps == i %}selected{% endif %}
                                                            value="{{ i }}">{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="fraicheur">Œnologue
                                            fraicheur:</label>

                                        <div class="col-md-9">
                                            <select id="fraicheur" name="fraicheur" class="form-control">
                                                <option value="">Œnologue fraicheur</option>
                                                {% for i in 1..10 %}
                                                    <option {% if product.fraicheur == i %}selected{% endif %}
                                                            value="{{ i }}">{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="evolution">Œnologue
                                            evolution:</label>

                                        <div class="col-md-9">
                                            <select id="evolution" name="evolution" class="form-control">
                                                <option value="">Œnologue evolution</option>
                                                {% for i in 1..10 %}
                                                    <option {% if product.evolution == i %}selected{% endif %}
                                                            value="{{ i }}">{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3" for="style">Œnologue style:</label>

                                        <div class="col-md-9">
                                            <select id="style" name="style" class="form-control">
                                                <option value="">Œnologue style</option>
                                                {% for i in 1..10 %}
                                                    <option {% if product.style == i %}selected{% endif %}
                                                            value="{{ i }}">{{ i }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="price" class="control-label col-md-3">Prix régulier:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="price" name="price" type="text"
                                                   value="{% if product.regularPrice is defined %}{{ product.regularPrice }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="strikePrice" class="control-label col-md-3">Prix strike:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="strikePrice" name="strikePrice"
                                                   type="text"
                                                   value="{% if product.strikePrice is defined %}{{ product.strikePrice }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="loyalityPrice" class="control-label col-md-3">Prix
                                            loyality:</label>

                                        <div class="col-md-9">
                                            <input class="form-control" id="loyalityPrice" name="loyalityPrice"
                                                   type="text"
                                                   value="{% if product.loyalityPrice is defined %}{{ product.loyalityPrice }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="volume" class="control-label col-md-3">Volume:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="volume" name="volume" type="text"
                                                   value="{% if product.volume is defined %}{{ product.volume }}{% endif %}"/>
                                        </div>
                                    </div>


                                    <div class="form-group ">
                                        <label for="cepage" class="control-label col-md-3">Cépage:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="cepage" name="cepage" type="text"
                                                   value="{% if product.cepage is defined %}{{ product.cepage }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="appelation" class="control-label col-md-3">Appelation:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="appelation" name="appelation" type="text"
                                                   value="{% if product.appelation is defined %}{{ product.appelation }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="vintage" class="control-label col-md-3">Millésime:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="vintage" name="vintage" type="text"
                                                   value="{% if product.vintage is defined %}{{ product.vintage }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="description" class="control-label col-md-3">Description</label>

                                        <div class="col-md-9">
                                            <textarea class="form-control" name="description" id="description"
                                                      rows="6">{% if product.description is defined %}{{ product.description }}{% endif %}</textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="characteristics1" class="control-label col-md-3">Caractèrisique
                                            1:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="characteristics1" name="characteristics1"
                                                   type="text"
                                                   value="{% if product.characteristics1 is defined %}{{ product.characteristics1 }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="characteristicsDetails" class="control-label col-md-3">Caractèrisique
                                            1 détail</label>

                                        <div class="col-md-9">
                                            <textarea class="form-control" name="characteristicsDetails"
                                                      id="characteristicsDetails"
                                                      rows="6">{% if product.characteristicsDetails is defined %}{{ product.characteristicsDetails }}{% endif %}</textarea>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="characteristics2" class="control-label col-md-3">Caractèrisique
                                            2:</label>

                                        <div class="col-md-9">
                                            <input class=" form-control" id="characteristics2" name="characteristics2"
                                                   type="text"
                                                   value="{% if product.characteristics2 is defined %}{{ product.characteristics2 }}{% endif %}"/>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="brand">Marque:</label>

                                        <div class="col-md-9">
                                            <select id="brand" name="brand" class="form-control">
                                                <option value="">Marques</option>
                                                {% for brand in brands %}
                                                    <option {% if product.getBrand() %}{% if product.getBrand().getId()==brand.id %}selected{% endif %}{% endif %}
                                                            value="{{ brand.id }}">{{ brand.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="sub_category">Sous Categorie:</label>

                                        <div class="col-md-9">
                                            <select id="sub_category" name="sub_category" class="form-control">
                                                <option value="">Sous Categorie</option>
                                                {% for sub_category in sub_categories %}
                                                    <option {% if product.getSubCategory() %}{% if product.getSubCategory().getId()==sub_category.id %}selected{% endif %}{% endif %}
                                                            value="{{ sub_category.id }}">{{ sub_category.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="region">Region:</label>

                                        <div class="col-md-9">
                                            <select id="region" name="region" class="form-control">
                                                <option value="">Regions</option>
                                                {% for region in regions %}
                                                    <option {% if product.getRegion() %}{% if product.getRegion().getId()==region.id %}selected{% endif %}{% endif %}
                                                            value="{{ region.id }}">{{ region.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="region">Pays:</label>

                                        <div class="col-md-9">
                                            <select id="country" name="country" class="form-control">
                                                <option value="">Pays</option>
                                                {% for country in countries %}
                                                    <option {% if product.getCountry() %}{% if product.getCountry().getId()==country.id %}selected{% endif %}{% endif %}
                                                            value="{{ country.id }}">{{ country.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="color">Couleurs:</label>

                                        <div class="col-md-9">
                                            <select id="color" name="color" class="form-control">
                                                <option value="">Couleurs</option>
                                                {% for color in colors %}
                                                    <option {% if product.getColor() %}{% if product.getColor().getId()==color.id %}selected{% endif %}{% endif %}
                                                            value="{{ color.id }}">{{ color.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3"
                                               for="taste">Goûts:</label>

                                        <div class="col-md-9">
                                            <select id="taste" name="taste" class="form-control m-bot15">
                                                <option value="">Goûts</option>
                                                {% for taste in tastes %}
                                                    <option {% if product.getTaste() %}{% if product.getTaste().getId()==taste.id %}selected{% endif %}{% endif %}
                                                            value="{{ taste.id }}">{{ taste.label }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="my_multi_select1" class="control-label col-md-3">Alliances:</label>

                                        <div class="col-md-9">
                                            <select multiple="multiple" class="my_multi_select" id="my_multi_select1"
                                                    name="my_multi_select1[]">

                                                {% for alliance in alliances %}

                                                    <option {% if alliance in prodAlliances %} selected {% endif %}
                                                            value="{{ alliance.id }}">{% if alliance.label %}{{ alliance.label }}{% endif %}</option>
                                                {% endfor %}

                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="recette" class="control-label col-md-3">Recettes:</label>

                                        <div class="col-md-9">
                                            <select id="recette" name="recette" class="form-control">
                                                <option value="">Recettes</option>
                                                {% for article in articles %}
                                                    <option {% if article in prodArticles %} selected {% endif %}
                                                            value="{{ article.id }}">{{ article.title }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="isNew" class="control-label col-md-3">Nouveau:</label>
                                        <div class="col-md-6">
                                            <input type="checkbox" style="width: 20px" class="switch-small form-control"
                                                   id="isNew" name="isNew"
                                                   {% if product.isNew is defined and product.isNew %}checked{% endif %} />
                                        </div>
                                    </div>

                                    <div class="form-group ">
                                        <label for="state" class="control-label col-md-3">Actif:</label>

                                        <div class="col-md-9">
                                            <input type="checkbox" style="width: 20px" class="switch-small form-control"
                                                   id="state" name="state"
                                                   {% if product.state is defined and product.state %}checked{% endif %}/>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-lg-offset-3 col-lg-6">
                                            <button class="btn btn-primary" type="submit">Save</button>
                                            <button onclick="window.location='{{ url('_backend_product') }}'"
                                                    class="btn btn-default" type="button">Cancel
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </section>

                </div>
            </div>
            <!-- page end-->
        </section>
    </section>
{% endblock %}


